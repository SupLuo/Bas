<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ConfigurablePlayerView">

        <attr name="kernel">
            <!--播放器延迟加载-->
            <enum name="lazy" value="-1"/>
            <!--使用系统播放器内核：VideoView-->
            <enum name="system" value="0" />
            <!--使用腾讯云播放器内核-->
            <enum name="tx" value="1" />
            <!--使用七牛云播放器内核-->
            <enum name="qn" value="2" />
        </attr>
    </declare-styleable>

    <!--播放器视图id-->
    <item name="bas_video_view_id" type="id"/>

    <!--播放器视图内核view id-->
    <item name="bas_video_view_kernel_id" type="id"/>

</resources>