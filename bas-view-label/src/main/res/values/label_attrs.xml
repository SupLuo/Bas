<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标签位置-->
    <attr name="label_location" format="flags">
        <!--左上角-->
        <flag name="left_top" value="0" />
        <!--右上角-->
        <flag name="right_top" value="1" />
        <!--右下角-->
        <flag name="right_bottom" value="2" />
        <!--左下角-->
        <flag name="left_bottom" value="3" />
    </attr>

    <!--不能使用android:空间的属性，避免作为TextView嵌套使用的问题-->

    <!--标签文本内容-->
    <attr name="label_text" format="string" />
    <!--标签文本颜色-->
    <attr name="label_textColor" format="reference|color" />
    <!--标签文本大小:默认12sp-->
    <attr name="label_textSize" format="dimension" />
    <!--标签文本样式：默认加粗-->
    <attr name="label_textStyle">
        <!--常规字体-->
        <flag name="normal" value="0" />
        <!--加粗-->
        <flag name="bold" value="1" />
        <!--斜体-->
        <flag name="italic" value="2" />
        <!--斜体加粗-->
        <flag name="bold_italic" value="3" />
    </attr>
    <!--标签文本上下padding：默认2dp-->
    <attr name="label_padding" format="dimension" />
    <!--间距：标签离顶点之间的距离，默认20（不能设置过小，过小会导致文本显示不全）-->
    <attr name="label_distance" format="dimension" />
    <!--标签背景色-->
    <attr name="label_backgroundColor" format="color" />
    <!--标签边框大小：如果小于等于0则不显示边框，默认0-->
    <attr name="label_strokeWidth" format="dimension" />
    <!--边框颜色-->
    <attr name="label_strokeColor" format="color" />

    <!--与Y轴的夹角 0-90-->
    <attr name="label_yAxisDegree" format="integer"/>
    <attr name="label_visible" format="boolean"/>

    <declare-styleable name="LabelView">
        <attr name="label_location" />
        <attr name="label_text" />
        <attr name="label_textColor" />
        <attr name="label_textSize" />
        <attr name="label_textStyle" />
        <attr name="label_padding" />
        <attr name="label_distance"/>
        <attr name="label_backgroundColor" />
        <attr name="label_strokeWidth" />
        <attr name="label_strokeColor" />
        <attr name="label_yAxisDegree"/>
        <attr name="label_visible"/>
    </declare-styleable>

    <declare-styleable name="LabelImageView">
        <attr name="label_location" />
        <attr name="label_text" />
        <attr name="label_textColor" />
        <attr name="label_textSize" />
        <attr name="label_textStyle" />
        <attr name="label_padding" />
        <attr name="label_distance"/>
        <attr name="label_backgroundColor" />
        <attr name="label_strokeWidth" />
        <attr name="label_strokeColor" />
        <attr name="label_yAxisDegree"/>
        <attr name="label_visible"/>
    </declare-styleable>



</resources>