<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Basic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LeanbackTestBlockTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LeanbackTestLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>



    <dimen name="test_rounding_radius">16dp</dimen>
    <!--ShapeableImageView 圆角-->
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/test_rounding_radius</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Test2Image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/test_rounding_radius</item>
        <item name="cornerSizeBottomRight">@dimen/test_rounding_radius</item>
    </style>
</resources>