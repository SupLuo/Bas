<resources>
    <!--children调用bringToFront时，当前布局是否也调用bringToFront，避免被覆盖，默认false-->
    <attr name="lb_duplicateChildrenBringToFront" format="boolean" />

    <!--children请求焦点时，是否将child bringToFront，如果children自己调用bringToFront，则不用开启该功能-->
    <attr name="lb_bringChildToFrontWhenRequestFocus" format="boolean" />


    <!--是否启动边界动画:通常是抖动效果，默认开启-->
    <attr name="lb_borderAnimEnable" format="boolean" />


    <declare-styleable name="LeanbackLayout">
        <!--默认开启边界动画-->
        <attr name="lb_borderAnimEnable" />
        <!--默认不开启-->
        <attr name="lb_bringChildToFrontWhenRequestFocus" />
        <!--默认不开启-->
        <attr name="lb_duplicateChildrenBringToFront" />
        <!--默认不开启-->
        <attr name="lb_focusMemoryEnable" />
        <!--焦点状态类型-->
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>

    <!--提供其他布局同样属性的定义，用于xml设置属性时能够出现提示-->
    <declare-styleable name="LeanbackLinearLayout">
        <!--默认开启边界动画-->
        <attr name="lb_borderAnimEnable" />
        <!--默认不开启-->
        <attr name="lb_bringChildToFrontWhenRequestFocus" />
        <!--默认不开启-->
        <attr name="lb_duplicateChildrenBringToFront" />
        <!--默认不开启-->
        <attr name="lb_focusMemoryEnable" />
        <!--焦点状态类型-->
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>

    <declare-styleable name="LeanbackRelativeLayout">
        <!--默认开启边界动画-->
        <attr name="lb_borderAnimEnable" />
        <!--默认不开启-->
        <attr name="lb_bringChildToFrontWhenRequestFocus" />
        <!--默认不开启-->
        <attr name="lb_duplicateChildrenBringToFront" />
        <!--默认不开启-->
        <attr name="lb_focusMemoryEnable" />
        <!--焦点状态类型-->
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>

    <declare-styleable name="LeanbackFrameLayout">
        <!--默认开启边界动画-->
        <attr name="lb_borderAnimEnable" />
        <!--默认不开启-->
        <attr name="lb_bringChildToFrontWhenRequestFocus" />
        <!--默认不开启-->
        <attr name="lb_duplicateChildrenBringToFront" />
        <!--默认不开启-->
        <attr name="lb_focusMemoryEnable" />
        <!--焦点状态类型-->
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>

    <declare-styleable name="LeanbackConstraintLayout">
        <!--默认开启边界动画-->
        <attr name="lb_borderAnimEnable" />
        <!--默认不开启-->
        <attr name="lb_bringChildToFrontWhenRequestFocus" />
        <!--默认不开启-->
        <attr name="lb_duplicateChildrenBringToFront" />
        <!--默认不开启-->
        <attr name="lb_focusMemoryEnable" />
        <!--焦点状态类型-->
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>

