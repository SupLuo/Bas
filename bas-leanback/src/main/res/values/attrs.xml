<?xml version="1.0" encoding="utf-8"?>
<resources>


    <attr name="enableScale" format="boolean" />
    <attr name="enableDimmer" format="boolean" />
    <attr name="bringToFrontOnFocus" format="boolean"/>

    <item name="lb_focus_zoom_factor_xxsmall_bas" type="fraction">103%</item>

    <attr name="zoomFactor">
        <!--无-->
        <enum name="none" value="0" />

        <!--自定义资源：amtv_focus_zoom_factor_xxsmal 103%-->
        <enum name="xxsmall" value="99" />

        <!--对应系统资源：lb_focus_zoom_factor_xsmall 106%-->
        <enum name="xsmall" value="4" />

        <!--对应系统资源：lb_focus_zoom_factor_small 110%-->
        <enum name="small" value="1" />

        <!--对应系统资源：lb_focus_zoom_factor_medium 114%-->
        <enum name="medium" value="2" />

        <!--对应系统资源：lb_focus_zoom_factor_large 118%-->
        <enum name="large" value="3" />
    </attr>

    <declare-styleable name="ScalableView">
        <attr name="enableScale" />
        <attr name="zoomFactor" />
        <!--暂时不起作用-->
        <attr name="enableDimmer"/>
        <!--获取焦点时是否自动bringToFront，默认false-->
        <attr name="bringToFrontOnFocus"/>
    </declare-styleable>


    <!--可缩放约束布局属性定义-->
    <declare-styleable name="ScalableConstraintLayout">
        <!--是否启用缩放：默认启用-->
        <attr name="enableScale" />
        <!--缩放级别 默认 xsmal-->
        <attr name="zoomFactor" />
        <!--是否启用失去焦点时变暗，默认false-->
        <attr name="enableDimmer" />
        <!--是否启用闪一下动画-->
        <attr name="enableFlash" format="boolean"/>
        <!--获取焦点时是否自动bringToFront，默认false-->
        <attr name="bringToFrontOnFocus"/>
    </declare-styleable>

    <declare-styleable name="TabLayoutBas">

    </declare-styleable>


</resources>