<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--是否启动边界动画:通常是抖动效果，默认开启-->
    <attr name="borderAnim_bas" format="boolean" />

    <!--children调用bringToFront时，当前布局是否也调用bringToFront，避免被覆盖，默认false-->
    <attr name="duplicateChildrenBringToFront_bas" format="boolean" />

    <!--children请求焦点时，是否将child bringToFront，如果children自己调用bringToFront，则不用开启该功能-->
    <attr name="bringChildToFrontWhenRequestFocus_bas" format="boolean" />

    <!--是否启用焦点记忆，默认true-->
    <attr name="focusMemory_bas" format="boolean" />

    <!--焦点记忆类型-->
    <attr name="focusMemoryStateType_bas" format="enum">
        <!--不处理任何焦点记忆View的状态-->
        <enum name="none" value="0" />
        <!--焦点记忆的view状态类型:即保持当前焦点记忆的[View]设置[View.setSelected]为true，而其他view则设置为false-->
        <enum name="selected" value="1" />
        <!--焦点记忆的view状态类型:即保持当前焦点记忆的[View]设置[View.setActivated]为true，而其他view则设置为false-->
        <enum name="activated" value="2" />
    </attr>

    <declare-styleable name="LeanbackLayout">
        <!--默认开启边界动画-->
        <attr name="borderAnim_bas" />
        <!--默认不开启-->
        <attr name="bringChildToFrontWhenRequestFocus_bas" />
        <!--默认不开启-->
        <attr name="duplicateChildrenBringToFront_bas" />
        <!--默认不开启-->
        <attr name="focusMemory_bas" />
        <!--焦点状态类型-->
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>

    <!--提供其他布局同样属性的定义，用于xml设置属性时能够出现提示-->
    <declare-styleable name="LeanbackLinearLayout">
        <!--默认开启边界动画-->
        <attr name="borderAnim_bas" />
        <!--默认不开启-->
        <attr name="bringChildToFrontWhenRequestFocus_bas" />
        <!--默认不开启-->
        <attr name="duplicateChildrenBringToFront_bas" />
        <!--默认不开启-->
        <attr name="focusMemory_bas" />
        <!--焦点状态类型-->
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>

    <declare-styleable name="LeanbackRelativeLayout">
        <!--默认开启边界动画-->
        <attr name="borderAnim_bas" />
        <!--默认不开启-->
        <attr name="bringChildToFrontWhenRequestFocus_bas" />
        <!--默认不开启-->
        <attr name="duplicateChildrenBringToFront_bas" />
        <!--默认不开启-->
        <attr name="focusMemory_bas" />
        <!--焦点状态类型-->
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>

    <declare-styleable name="LeanbackFrameLayout">
        <!--默认开启边界动画-->
        <attr name="borderAnim_bas" />
        <!--默认不开启-->
        <attr name="bringChildToFrontWhenRequestFocus_bas" />
        <!--默认不开启-->
        <attr name="duplicateChildrenBringToFront_bas" />
        <!--默认不开启-->
        <attr name="focusMemory_bas" />
        <!--焦点状态类型-->
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>

    <declare-styleable name="LeanbackConstraintLayout">
        <!--默认开启边界动画-->
        <attr name="borderAnim_bas" />
        <!--默认不开启-->
        <attr name="bringChildToFrontWhenRequestFocus_bas" />
        <!--默认不开启-->
        <attr name="duplicateChildrenBringToFront_bas" />
        <!--默认不开启-->
        <attr name="focusMemory_bas" />
        <!--焦点状态类型-->
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>


    <declare-styleable name="FocusMemoryView">
        <attr name="focusMemory_bas" />
        <attr name="focusMemoryStateType_bas" />
    </declare-styleable>

    <declare-styleable name="LeanbackVerticalGridView">
        <attr name="focusMemory_bas" />
    </declare-styleable>
</resources>