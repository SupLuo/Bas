<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--###############这部分属性适用于任何的ViewGroup-->
    <!--是否启用焦点记忆，默认false-->
    <attr name="lb_focusMemoryEnable" format="boolean" />

    <!--焦点记忆类型:默认selected-->
    <attr name="lb_focusMemoryStateType" format="enum">
        <!--不处理任何焦点记忆View的状态-->
        <enum name="none" value="0" />
        <!--焦点记忆的view状态类型:即保持当前焦点记忆的[View]设置[View.setSelected]为true，而其他view则设置为false-->
        <enum name="selected" value="1" />
        <!--焦点记忆的view状态类型:即保持当前焦点记忆的[View]设置[View.setActivated]为true，而其他view则设置为false-->
        <enum name="activated" value="2" />
    </attr>

    <!--焦点记忆功能对应的属性支持-->
    <declare-styleable name="FocusMemoryView">
        <attr name="lb_focusMemoryEnable" />
        <attr name="lb_focusMemoryStateType" />
    </declare-styleable>


    <!--缩放帮助类所需的缩放等级属性-->
    <item name="lb_focus_zoom_factor_xxsmall_bas" type="fraction">103%</item>

    <attr name="zoomFactor">
        <!--无-->
        <enum name="none" value="0" />

        <!--自定义资源：amtv_focus_zoom_factor_xxsmal 103%-->
        <enum name="xxsmall" value="99" />

        <!--对应系统资源：lb_focus_zoom_factor_xsmall 106%-->
        <enum name="xsmall" value="4" />

        <!--对应系统资源：lb_focus_zoom_factor_small 110%-->
        <enum name="small" value="1" />

        <!--对应系统资源：lb_focus_zoom_factor_medium 114%-->
        <enum name="medium" value="2" />

        <!--对应系统资源：lb_focus_zoom_factor_large 118%-->
        <enum name="large" value="3" />
    </attr>




</resources>